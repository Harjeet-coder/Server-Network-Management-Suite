#!/bin/bash

# Base schema folder
BASE_DIR="schema"

# Folder structure array
declare -A folders=(
  ["general"]="users.sql sessions.sql mac_access_status.sql"
  ["network"]="network_devices.sql network_alerts.sql network_logs.sql network_log_info.sql backup_management.sql backup_schedule.sql"
  ["server"]="server_devices.sql server_alerts.sql server_logs.sql server_log_volume.sql server_log_info.sql"
)

# Create folders and files
mkdir -p "$BASE_DIR"

for folder in "${!folders[@]}"; do
  mkdir -p "$BASE_DIR/$folder"
  for file in ${folders[$folder]}; do
    touch "$BASE_DIR/$folder/$file"
  done
done

echo "Folder structure and empty schema files created under '$BASE_DIR/'"

